<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.feleviprojekt.Controller">
    <children>
        <MenuBar prefHeight="26.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="Fájl">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Mentés" />
                        <MenuItem mnemonicParsing="false" text="Megnyitás" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Generálás" />
                <Menu mnemonicParsing="false" text="Nézet">
                    <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#teljesNezet" selected="true" text="Teljes">
                            <toggleGroup>
                                <ToggleGroup fx:id="nezet" />
                            </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" text="Felülnézet" toggleGroup="$nezet" />
                        <RadioMenuItem mnemonicParsing="false" text="Alulnézet" toggleGroup="$nezet" />
                        <RadioMenuItem mnemonicParsing="false" text="Oldalnézet" toggleGroup="$nezet" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Súgó" />
            </menus>
        </MenuBar>
        <Pane fx:id="felulNezet" layoutX="1.0" layoutY="24.0" prefHeight="274.0" prefWidth="600.0" />
        <Pane layoutX="-1.0" layoutY="298.0" prefHeight="106.0" prefWidth="600.0">
            <children>
                <VBox layoutY="4.0" prefHeight="194.0" prefWidth="298.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                    </children>
                </VBox>
            </children>
        </Pane>
    </children>
